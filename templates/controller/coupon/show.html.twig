{% extends 'base.html.twig' %}

{% block title %}Coupon {% endblock %}

{% block body %}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-building mr-1"></i>
                        Coupon
                    </h3>

                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th style="width: 30%;">Coupon Code</th>
                            <td>{{ coupon.coupon }}</td>
                        </tr>
                        <tr>
                            <th>Active</th>
                            <td>
                                {% if coupon.active %}
                                    <i class="fas fa-check-square"></i>
                                {% else %}
                                    <i class="far fa-square"></i>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Created Date</th>
                            <td>{{ (coupon.createdDate) ? coupon.createdDate|toTZ : " - " }}</td>
                        </tr>
                        <tr>
                            <th>Updated Date</th>
                            <td>{{ (coupon.modifiedDate) ? coupon.modifiedDate|toTZ : " - " }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="card-footer">
                    <a href="{{ path('app_coupon_index') }}" class="btn btn-info">
                        <i class="fas fa-arrow-alt-circle-left"></i> Back</a>

                    {% if is_granted('ROLE_ADMIN')  %}
                        <a href="{{ path('app_coupon_edit', {'id': coupon.id}) }}" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit</a>
                    {% endif %}

                    {% if is_granted('ROLE_SUPER_ADMIN')  %}
                        <form method="post" style="display: inline;" action="{{ path('app_coupon_delete', {'id': company.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this coupon?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ coupon.id) }}">
                            <button class="btn btn-danger"><i class="fas fa-minus-circle"></i> Delete</button>
                        </form>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>

{% endblock %}

