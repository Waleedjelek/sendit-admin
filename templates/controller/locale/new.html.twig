{% extends 'base.html.twig' %}

{% block title %}New Locale{% endblock %}

{% block body %}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create new Locale</h3>
        </div>
        {{ form_start(form) }}
        <div class="card-body">
            {{ form_widget(form) }}
        </div>
</div>
        <div class="card-footer" style="background-color: #eaeaea ;">
            <button  style="background-color: transparent;" class="btn btn-danger btn-back icn4">{{ button_label|default('Save') }}</button>

            <a style="background-color: transparent;border-color:red !important" class="btn btn-danger2 btn-back icn4" href="{{ path('app_locale_index') }}">Cancel</a>
        </div>
        {{ form_end(form) }}
    
{% endblock %}
