{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
   <div class="row">
        <div class="col-12">
<div class="main-order-pg-btn-flex">

<div class="accept-order-img">
<img class="img-set" src="\build\images\User.png" >
<h2 class="title-heading">Users</h2>
</div>

<div class="order-pg-btn-flex">
<div class="order-pg-btn1">
<img  src="\build\images\Receipt.png" class="img-order-pix">
<div>

 <p class="img-side-text-order" > New Orders(7)</p>
 </div>
</div>

<div class="order-pg-btn2">
<img  src="\build\images\Receipt.png" class="img-order-pix">
<div>

 <p class="img-side-text-order" > New Ouote(0)</p>
 </div>
</div>
</div>
</div>


    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                   <div class="company-searcher">
                    <div class="input-container">
      <input type="text" placeholder="Search">
      <i class="fa fa-search"></i>
    </div>
                    {% if is_granted('ROLE_ADMIN')  %}
                        <div class="card-tools">
                            <ul class="nav nav-pills ml-auto">
                                <li class="nav-item">
                                    <a href="{{ path('app_user_new') }}" class="btn btn-primary btn-block btn-sm">
                                        <i class="fa fa-plus"></i> Add User</a>
                                </li>
                            </ul>
                        </div>
                    {% endif %}
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover" id="userTableList">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Registered</th>
                            <th>Last Login</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block inlineJs %}
    <script>
        $(document).ready(function () {
            $('#userTableList').DataTable({
                "paging": true,
                "ordering": false,
                "responsive": true,
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "{{ path('app_user_index') | raw }}",
                    "type": 'POST',
                    global: true
                },
                "columns": [
                    {"data": "name"},
                    {"data": "email"},
                    {"data": "role"},
                    {"data": "created"},
                    {"data": "lastLogin"},
                    {
                        "data": "action",
                        "render": function (data) {
                            return '<a href="' + data['details'] + '" class="btn btn-default"><i class="fas fa-info-circle"></i> Details</a>';
                        }
                    }
                ]
            });

        });
    </script>
{% endblock %}

