{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Edit User</h3>
        </div>
        {{ form_start(form) }}
        <div class="card-body">
            {{ form_widget(form) }}
        </div>

        <div class="card-footer">
            <button class="btn btn-danger1 icn4 ">{{ button_label|default('Save') }}</button>

            <a class="btn btn-danger1 icn4" href="{{ path('app_user_show',{id:user.id}) }}">Cancel</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
