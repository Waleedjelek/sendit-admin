{% extends 'base.html.twig' %}

{% block title %}Zone - {{ company.name }} ({{ company.type }}){% endblock %}

{% block body %}

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-atlas mr-1"></i>
                        Zone - {{ company.name }} ({{ company.type }})
                    </h3>

                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th  style="width: 30%;">Name</th>
                            <td>{{ zone.name }} [{{ zone.code }}]</td>
                        </tr>
                        <tr>
                            <th  style="width: 30%;">Minimum Days</th>
                            <td>{{ zone.minDays }}</td>
                        </tr>
                        <tr>
                            <th  style="width: 30%;">Maximum Days</th>
                            <td>{{ zone.maxDays }}</td>
                        </tr>
                        <tr>
                            <th>Countries</th>
                            <td>
                                {% for country in zone.countries %}
                                    <a href="#" class="btn btn-default btn-sm" style="margin-bottom: 2px;">{{ country.name }} ({{ country.code }})</a>
                                {% endfor %}
                            </td>
                        </tr>
                        <tr>
                            <th>Active</th>
                            <td>
                                {% if zone.active %}
                                    <i class="fas fa-check-square"></i>
                                {% else %}
                                    <i class="far fa-square"></i>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Created Date</th>
                            <td>{{ (zone.createdDate) ? zone.createdDate|toTZ : " - " }}</td>
                        </tr>
                        <tr>
                            <th>Updated Date</th>
                            <td>{{ (zone.modifiedDate) ? zone.modifiedDate|toTZ : " - " }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="card-footer">
                    <a href="{{ path('app_company_show',{'id':company.id}) }}" class="btn btn-info">
                        <i class="fas fa-arrow-alt-circle-left"></i> Back</a>

                    <a href="{{ path('app_zone_edit', {'companyId': company.id,'id': zone.id}) }}" class="btn btn-primary pakag-show-btn">
                        <i class="fas fa-edit icn"></i> Edit</a>

                    {% if is_granted('ROLE_ADMIN')  %}
                        <form method="post" style="display: inline;" action="{{ path('app_zone_delete', {'companyId': company.id,'id': zone.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this zone?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ zone.id) }}">
                            <button class="btn btn-danger"><i class="fas fa-minus-circle"></i> Delete</button>
                        </form>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-money-check-alt mr-1"></i>
                        Prices
                    </h3>
                    <div class="card-tools">
                        <ul class="nav nav-pills ml-auto">
                            <li class="nav-item" style="margin-right: 10px;">
                                <a href="{{ path('app_zone_price_import', {'zoneId': zone.id}) }}" class="btn btn-primary btn-block btn-sm compani-btns-last">
                                    <i class="fa fa-file-import btns-last-icon"></i> Import Price</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('app_zone_price_new', {'zoneId': zone.id}) }}" class="btn btn-primary btn-block btn-sm compani-btns-last">
                                    <i class="fa fa-plus  btns-last-icon"></i> Add Price</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover" id="zoneTableList">
                        <thead>
                        <tr>
                            <th>Method</th>
                            <th>For</th>
                            <th>Weight (kg)</th>
                            <th>Price (AED)</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block inlineJs %}
    <script>
        $(document).ready(function () {
            $('#zoneTableList').DataTable({
                "paging": true,
                "ordering": false,
                "searching": true,
                "responsive": true,
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "{{ path('app_zone_price_index' , {'zoneId':zone.id}) | raw }}",
                    "type": 'POST',
                    global: true
                },
                "columns": [
                    {"data": "type"},
                    {"data": "for"},
                    {"data": "weight"},
                    {"data": "price"},
                    {
                        "data": "action",
                        "render": function (data) {
                            return '<a href="' + data['edit'] + '" class="btn btn-default"><i class="fas fa-edit icn"></i> Edit</a>';
                        }
                    }
                ]
            });

        });
    </script>
{% endblock %}
