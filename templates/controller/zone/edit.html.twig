{% extends 'base.html.twig' %}

{% block title %}Edit Zone{% endblock %}

{% block body %}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Edit Zone - {{ company.name }} ({{ company.type }})</h3>
        </div>
        {{ form_start(form) }}
        <div class="card-body">
            {{ form_widget(form) }}
        </div>

        <div class="card-footer">
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>

            <a class="btn btn-danger" href="{{ path('app_company_show',{id:company.id}) }}">Cancel</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
