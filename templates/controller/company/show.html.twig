{% extends 'base.html.twig' %}

{% block title %}Company - {{ company.name }}{% endblock %}

{% block body %}

<div class="row">
        <div class="col-12">
<div class="main-order-pg-btn-flex">

<div class="accept-order-img">
{# <img class="img-set" src="\build\images\Company.4ed89b3c.png" > #}
<img class="img-set"  src="{{ asset('build/images/Company.png') }}" alt="Logo">


<h2 class="title-heading2">Companies</h2>
</div>

<div class="order-pg-btn-flex">
<div class="order-pg-btn1">
{# <img  src="\build\images\Receipt.bedbb541.png"  class="img-order-pix"> #}
<img  class="img-order-pix"  src="{{ asset('build/images/Receipt.png') }}" alt="Logo">

<div>

 <p class="img-side-text-order" > New Orders(7)</p>
 </div>
</div>

<div class="order-pg-btn2">
{# <img  src="\build\images\Receipt.bedbb541.png" class="img-order-pix"> #}
<img  class="img-order-pix"  src="{{ asset('build/images/Receipt.png') }}" alt="Logo">

<div>

 <p class="img-side-text-order" > New Ouote(0)</p>
 </div>
</div>
</div>
</div>

    <div class="row">
        <div class="col-12 bgcolor-table">
            <div class="card"style="border-radius:15px !important">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-building mr-1"></i>
                        Company
                    </h3>

                </div>
                <div class="card-body">
                    <table class="table table-bordered dataTable2">
                        <tbody>
                        <tr>
                            <th style="width: 30%;">Name</th>
                            <td>{{ company.name }}</td>
                        </tr>
                        <tr>
                            <th style="width: 30%;">Code</th>
                            <td>{{ company.code }}</td>
                        </tr>
                        {% if company.carrierCode is not empty %}
                            <tr>
                                <th style="width: 30%;">Carrier Tracking Code</th>
                                <td>{{ company.carrierCode }}</td>
                            </tr>
                        {% endif %}
                        {% if company.noteTitle is not empty %}
                            <tr>
                                <th style="width: 30%;">Shipping Note Title</th>
                                <td>{{ company.noteTitle }}</td>
                            </tr>
                        {% endif %}
                        {% if company.noteSummary is not empty %}
                            <tr>
                                <th style="width: 30%;">Shipping Note Summary</th>
                                <td>{{ company.noteSummary|nl2br }}</td>
                            </tr>
                        {% endif %}
                        {% if company.boeThreshold > 0 %}
                            <tr>
                                <th style="width: 30%;">BOE Threshold</th>
                                <td>{{ company.boeThreshold }} (AED)</td>
                            </tr>
                            <tr>
                                <th style="width: 30%;">BOE Amount</th>
                                <td>{{ company.boeAmount }} (AED)</td>
                            </tr>
                        {% endif %}
                        <tr>
                            <th>Logo</th>
                            <td>
                                <img src="/uploads/{{ company.logoImage }}" style="width: {{ company.logoWidth }}px;" >
                            </td>
                        </tr>
                        <tr>
                            <th>Type</th>
                            <td>
                                {% if company.type == 'dom' %}
                                    Domestic
                                {% else %}
                                    International
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Active</th>
                            <td>
                                {% if company.active %}
                                    <i class="fas fa-check-square"></i>
                                {% else %}
                                    <i class="far fa-square"></i>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Created Date</th>
                            <td>{{ (company.createdDate) ? company.createdDate|toTZ : " - " }}</td>
                        </tr>
                        <tr>
                            <th>Updated Date</th>
                            <td>{{ (company.modifiedDate) ? company.modifiedDate|toTZ : " - " }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="card-footer"style="border-radius:15px !important">
                    <a  style="width:87px" href="{{ path('app_company_index') }}" class="btn btn-danger btn-back icn4">
                        <i class="fas fa-arrow-alt-circle-left icn4"></i> Back</a>

                    {% if is_granted('ROLE_ADMIN')  %}
                        <a href="{{ path('app_company_edit', {'id': company.id}) }}" class="btn btn-danger btn-back icn4">
                            <i class="fas fa-edit icn4 "></i> Edit</a>
                    {% endif %}

                    {% if is_granted('ROLE_SUPER_ADMIN')  %}
                        <form method="post" style="display: inline;" action="{{ path('app_company_delete', {'id': company.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this company?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ company.id) }}">
                            <button class="btn btn-danger btn-back icn4"><i class="fas fa-minus minus-icn"></i> Delete</button>
                        </form>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 bgcolor-table">
            <div class="card"style="border-radius:15px !important ;padding-top:5px">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-atlas mr-1"></i>
                        Zones
                    </h3>
                    <div class="card-tools">
                        <ul class="nav nav-pills ml-auto">
                            <li class="nav-item"id="for-border" style="margin-right: 10px;">
                                <a style="width:129px ;height:32px"  href="{{ path('app_company_export', {'id': company.id}) }}" class="btn btn-primary btn-block btn-sm compani-btns-last">
                                    <i style="padding-top:4px" class="fa fa-file-export btns-last-icon "></i> Export Price</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN')  %}
                                <li class="nav-item" id="for-border">
                                    <a style="height:32px"  href="{{ path('app_zone_new', {'companyId': company.id}) }}" class="btn btn-primary btn-block btn-sm compani-btns-last">
                                        <i style="padding-top:4px " class="fa fa-plus btns-last-icon"></i> Add Zone</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover" id="zoneTableList">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Countries</th>
                            <th>CSV Import Code</th>
                            <th>Min Days</th>
                            <th>Max Days</th>
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block inlineJs %}
    <script>
        $(document).ready(function () {
            $('#zoneTableList').DataTable({
                "paging": false,
                "ordering": false,
                "searching": false,
                "responsive": true,
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "{{ path('app_zone_index' , {'companyId':company.id}) | raw }}",
                    "type": 'POST',
                    global: true
                },
                "columns": [
                    {"data": "name"},
                    {"data": "countryCount"},
                    {"data": "code"},
                    {"data": "minDays"},
                    {"data": "maxDays"},
                    {
                        "data": "active",
                        "render": function (data) {
                            if (data) {
                                return '<i class="fas fa-check-square"></i>';
                            }
                            return '<i class="far fa-square"></i>';
                        }
                    },
                    {
                        "data": "action",
                        "render": function (data) {
                            let action =  '<a href="' + data['show'] + '" class="btn btn-default"><i class="fas fa-info-circle icn"></i> Show</a>';
                            //action = action +  '<a href="' + data['edit'] + '" class="btn btn-default"><i class="fas fa-edit"></i> Edit</a>';
                            return action;
                        }
                    }
                ]
            });

        });
    </script>
{% endblock %}
