{% extends 'base.html.twig' %}

{% block title %}Edit Country{% endblock %}

{% block body %}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Edit Country</h3>
        </div>
        {{ form_start(form) }}
        <div class="card-body">
            {{ form_widget(form) }}
        </div>

        <div class="card-footer">
            <button style="background-color: transparent ;" class="btn btn-danger btn-back icn4">{{ button_label|default('Save') }}</button>
            <a style="background-color: transparent ;" class="btn btn-danger btn-back icn4" href="{{ path('app_country_index') }}">Cancel</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
