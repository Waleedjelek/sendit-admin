{% block inlineJs %}
    <script>
        $(document).ready(function () {
            $('#countryTableList').DataTable({
                "paging": true,
                "ordering": false,
                "responsive": true,
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "{{ path('app_country_index') | raw }}",
                    "type": 'POST',
                    global: true
                },
                "columns": [
                    {"data": "name"},
                    {"data": "code"},
                    {"data": "dailCode"},
                    {
                        "data": "flag",
                        "render": function (data, type, row, meta) {
                            return '<img src="' + data + '" width="32" alt="' + row['name'] + '" />';
                        }
                    },
                    {"data": "sortOrder"},
                    {
                        "data": "active",
                        "render": function (data) {
                            if (data) {
                                return '<i class="fas fa-check-square"></i>';
                            }
                            return '<i class="far fa-square"></i>';
                        }
                    },
                    {
                        "data": "action",
                        "render": function (data) {
                            return '<a href="' + data['edit'] + '" class="btn btn-default"><i class="fas fa-edit icn"></i> Edit</a>';
                        }
                    }
                ]
            });

        });
    </script>
{% endblock %}

